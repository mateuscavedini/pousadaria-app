<%= render 'errors' %>

<%= form_with model: @guesthouse do |f| %>
  <div>
    <%= f.label :corporate_name %>
    <%= f.text_field :corporate_name %>
  </div>
  <div>
    <%= f.label :trading_name %>
    <%= f.text_field :trading_name %>
  </div>
  <div>
    <%= f.label :registration_number %>
    <%= f.text_field :registration_number %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :allow_pets %>
    <%= f.check_box :allow_pets %>
  </div>
  <div>
    <%= f.label :payment_methods %>
    <%= f.text_field :payment_methods %>
  </div>
  <div>
    <%= f.label :check_in %>
    <%= f.time_field :check_in %>
    <%= f.label :check_out %>
    <%= f.time_field :check_out %>
  </div>
  <div>
    <%= f.label :usage_policy %>
    <%= f.text_area :usage_policy %>
  </div>

  <%= render partial: 'address_fields', locals: { f: f } %>

  <%= render partial: 'contact_fields', locals: { f: f } %>

  <div>
    <%= f.submit 'Enviar' %>
  </div>
<% end %>