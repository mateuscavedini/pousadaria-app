<% if @addresses.any? %>
  <div id="city-links">
    <h3>Cidades Disponíveis:</h3>
    <nav>
      <ul>
        <% @addresses.each do |address| %>
          <li><%= link_to address.city, search_by_city_guesthouses_path(query: address.city), class: 'button' %></li>
        <% end %>
      </ul>
    </nav>
  </div>
<% end %>

<% if @recent_guesthouses.any? %>
  <section id="recent-guesthouses">
    <h3>Pousadas Adicionadas Recentemente</h3>
    <% @recent_guesthouses.each do |guesthouse| %>
      <%= render guesthouse %>
    <% end %>
  </section>
  
  <% if @guesthouses.any? %>
    <section id="remaining-guesthouses">
      <h3>Outras Pousadas</h3>
      <% @guesthouses.each do |guesthouse| %>
        <%= render guesthouse %>
      <% end %>
    </section>
  <% end %>
<% else %>
  <p>Não existem pousadas cadastradas.</p>
<% end %>