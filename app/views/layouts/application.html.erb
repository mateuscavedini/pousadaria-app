<!DOCTYPE html>
<html>
  <head>
    <title>PousadariaApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
  </head>

  <body>
    <header>
      <%= link_to root_path do %>
        <h1>Pousadaria</h1>
      <% end %>

      <nav>
        <ul>
          <% if owner_signed_in? %>
            <li>
              <% if current_owner.guesthouse %>
                <%= link_to 'Minha Pousada', my_guesthouse_path %>
              <% else %>
                <%= link_to 'Cadastrar Pousada', new_guesthouse_path %>
              <% end %>
            </li>
            <li><%= owner_description(current_owner) %></li>
            <li><%= button_to 'Sair', destroy_owner_session_path, method: :delete %></li>
          <% else %>
            <li>Registre-se como: <%= link_to 'HÃ³spede', root_path %> | <%= link_to 'ProprietÃ¡rio', new_owner_registration_path %></li>
            <li><%= link_to 'Entrar', new_owner_session_path %></li>
          <% end %>
        </ul>
      </nav>
    </header>

    <%= alert %>
    <%= notice %>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
