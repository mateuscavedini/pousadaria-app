<h2><%= @room.guesthouse.trading_name %> - <%= @room.name %></h2>

<% if owner_signed_in? && @room.guesthouse.owner == current_owner %>
  <%= link_to 'Editar', edit_room_path(@room.guesthouse, @room) %>
  <% if @room.active? %>
    <%= button_to 'Desativar Quarto', deactivated_room_path(@room.guesthouse, @room) %>
  <% else %>
    <%= button_to 'Ativar Quarto', activated_room_path(@room.guesthouse, @room) %>
  <% end %>
<% end %>

<dl>
  <dt>Nome:</dt>
  <dd><%= @room.name %></dd>
  <dt>Descrição:</dt>
  <dd><%= @room.description %></dd>
  <dt>Área:</dt>
  <dd><%= @room.area %>m²</dd>
  <dt>Capacidade Máxima:</dt>
  <dd><%= @room.max_capacity %> pessoa(s)</dd>
  <dt>Diária:</dt>
  <dd><%= number_to_currency(@room.daily_rate) %></dd>
  <dt>Possui Banheiro?</dt>
  <dd><%= t("yesno.#{@room.has_bathroom?}") %></dd>
  <dt>Possui Varanda?</dt>
  <dd><%= t("yesno.#{@room.has_balcony?}") %></dd>
  <dt>Possui Ar Condicionado?</dt>
  <dd><%= t("yesno.#{@room.has_air_conditioner?}") %></dd>
  <dt>Possui TV?</dt>
  <dd><%= t("yesno.#{@room.has_tv?}") %></dd>
  <dt>Possui Guarda-roupas?</dt>
  <dd><%= t("yesno.#{@room.has_wardrobe?}") %></dd>
  <dt>Possui Cofre?</dt>
  <dd><%= t("yesno.#{@room.has_safe?}") %></dd>
  <dt>É acessível para PCDs?</dt>
  <dd><%= t("yesno.#{@room.is_accessible?}") %></dd>
</dl>

<% if owner_signed_in? && current_owner == @room.guesthouse.owner %>
  <h3>Preços Sazonais</h3>
  <%= link_to 'Adicionar Preço Sazonal', new_room_seasonal_rate_path(@room) %>
  <% if @room.seasonal_rates.any? %>
    <ul>
      <% @room.seasonal_rates.each do |seasonal_rate| %>
        <li><%= localize(seasonal_rate.start_date) %> até <%= localize(seasonal_rate.finish_date) %> - <%= number_to_currency(seasonal_rate.rate) %></li>
      <% end %>
    </ul>
  <% else %>
    <p>Não há preços sazonais cadastrados.</p>
  <% end %>
<% end %>